<UserControl x:Class="FrameTest.Components.View.PopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:model="clr-namespace:FrameTest.Components.Model"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250"
             d:DataContext="{d:DesignInstance model:PopupControlModel}">
    <StackPanel Background="White">
        <Label Content="Ваш любимый цвет?"/>
        <TextBox Text="{Binding Text}" Margin="0,5,0,5"/>
        <Button Content="Подтвердить" Command="{Binding ButtonClick}"/>
    </StackPanel>
</UserControl>
